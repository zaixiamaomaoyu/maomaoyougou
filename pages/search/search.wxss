page {
    background-color: #dedede;
    padding: 20rpx;
  }
  .search_row {
    height: 60rpx;
    display: flex;
  }
  .search_row input {
    background-color: #fff;
    flex: 1;
    height: 100%;
    padding-left: 30rpx;
  }
  .search_row button {
    width: 110rpx;
    height: 100%;
    padding: 0;
    margin: 0 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .btn{
      font-size: 28rpx;
      font-weight: 200;
      color: #000;
  }

  .search_container{
    margin-top: 30rpx;
    background-color: #fff;
  }

  .text{
      padding: 20rpx;
      border-bottom: 1rpx solid #dedede;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
  }