.goods_item{
    display: flex;
    border-bottom: 1rpx solid #cccccc;
    padding: 5rpx 0;
}

.goods_img_wrap{
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
}

.goods_img_wrap image{
    width: 80%;
}

.goods_info_wrap{
    flex: 3;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.goods_info_wrap .goods_name{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.goods_info_wrap .goods_price{
    color: var(--themeColor);
    font-size: 32rpx;
}

.second_tab, .third_tab{
    padding: 20rpx;
}