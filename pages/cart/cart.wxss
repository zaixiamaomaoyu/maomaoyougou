.cart_address{
    padding: 20rpx;
}

.user_info{
    display: flex;
    padding: 20rpx;
}

.user_info_row{
    flex: 4;
}

.user_info_name{
    padding: 10rpx 0;
}

.user_phone{
    flex: 2;
    text-align: right;
}

/* 商品信息 */
.cart_title{
    font-size: 38rpx;
    color: var(--themeColor);
    font-weight: bolder;
    padding: 20rpx;
}

.care_item{
    display: flex;
    padding: 15rpx;
    border-bottom: 8rpx solid #eee;
}

.cart_check{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.care_item navigator{
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
}

.care_item navigator image{
    width: 80%;
}

.cart_info{
    flex: 4;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.cart_info_name{
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    display: -webkit-box;
}

.cart_price_row{
    display: flex;
    justify-content: space-between;

}

.num_edit_row{
    display: flex;
}

.price{
    color: var(--themeColor);
    font-size: 38rpx;
}

.num_edit{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50rpx;
    height: 50rpx;
    border: 1rpx solid #eee;
}

.num{
    width: 50rpx;
    height: 50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* 底部工具栏 */
.cart_total_container{
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 90rpx;
    background-color: #ffffff;
    border-top: 5rpx solid #eee;
}

.all_check{
    height: 100%;
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
    
}

.total_price_wrap{
    height: 100%;
    flex: 5;
    /* display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: orange; */
    text-align: right;
    padding-right: 15rpx;
}

.total_price_text{
    color: var(--themeColor);
    font-size: 38rpx;
    font-weight: bolder;
}

.total_count{
    height: 100%;
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: orangered;
    color: #ffffff;
}